{
  "name": "ultra-image-uploader",
  "version": "3.0.4",
  "description": "A modern, shadcn/ui-inspired React image upload component with beautiful themes, drag-and-drop, and smooth animations",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "prepare": "npm run build",
    "prepublishOnly": "npm run build",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "react",
    "image-upload",
    "file-upload",
    "imgbb",
    "cloudinary",
    "drag-and-drop",
    "image-hosting",
    "upload-component",
    "typescript",
    "react-component",
    "image-uploader",
    "multiple-upload",
    "progress-tracking",
    "file-validation",
    "auto-imports"
  ],
  "author": "Digontha Das",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/digontha/ultra-image-uploader.git"
  },
  "bugs": {
    "url": "https://github.com/digontha/ultra-image-uploader/issues"
  },
  "homepage": "https://github.com/digontha/ultra-image-uploader#readme",
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "dependencies": {
    "lucide-react": "^0.485.0"
  },
  "devDependencies": {
    "@types/react": "^19.1.1",
    "@types/node": "^22.13.14",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
